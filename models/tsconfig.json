{
    "compilerOptions": {
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowJs": true,
      "target": "es2020",
      "outDir": "./build",
      "moduleResolution": "node",
      "module": "commonjs",
      "lib": ["es2020"],
      "rootDir": "./src",
      "esModuleInterop": true,
      "declaration": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  